doctype html
html
	head
		title= title
		meta(name="viewport" content="width=device-width, initial-scale=1")
		link(rel='stylesheet', href='/stylesheets/style.css')
		link(rel='stylesheet', href='/dist/bootstrap.min.css')
		link(rel = 'stylesheet' href='http://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css')
		script(type="text/javascript" src='/dist/jquery.min.js')
		script(type="text/javascript" src='/dist/bootstrap.min.js')
		script(type="text/javascript" src='/dist/underscore-min.js')
	body
		nav.navbar.navbar-inverse.navbar-fixed-top
			.container
				.navbar-header
					button.navbar-toggle.collapsed(type='button',data-toggle='collapse',data-target='#navbar',aria-expanded='false',aria-controls='navbar' )
						span.sr-only Toggle navigation
						span.icon-bar
						span.icon-bar
						span.icon-bar
					a.navbar-brand(href='/' style="padding:8px;")
						img(src='/images/time.svg' style="height:100%;")
					a.navbar-brand(href='/') Time Cards
				#navbar.collapse.navbar-collapse
					ul.nav.navbar-nav.navbar-right
						li
							a(href='/') Home
						if user
							if user.admin=="admin"
								li
									a(href='/admin') #{user.name}
							else
								li
									a(href='/users/'+user._id) #{user.name}
						else
							li.dropdown
								a.dropdown-toggle(data-toggle="dropdown" href="#") Sign-up
									span.caret
								ul.dropdown-menu
									li
										a(href='/signup/admin') Company
									li
										a(href='/signup/emp') Employee
							li
								a(href='/login') Sign-in
						li
							a(href='/contactus') Contact us
						li
							a(href='/docs') Docs
						if user
							li
								a.logout(href='/logout') Logout
		
		block content