extends layout

block content
	#signup-admin
		form.col-sm-offset-3.col-sm-6.form-horizontal(method="POST" action="/register/admin")
			h2.text-center Register your company with us
			hr
			.form-group
				.col-sm-6.col-sm-offset-3
					input.form-control.cname(name="cname" ,type="text",placeholder="Company Name" required)
			.form-group
				.col-sm-6.col-sm-offset-3
					input.form-control.id(name="id" ,type="text",placeholder="ID (Used for login)" required)
			.form-group
				.col-sm-6.col-sm-offset-3
					input.form-control.name(name="name" ,type="text",placeholder="Admin Name" required)
			.form-group
				.col-sm-6.col-sm-offset-3
					input.form-control.password(name="password" ,type="password",placeholder="Password" required)
			
			hr
			.form-group
				.col-sm-offset-5.col-sm-10
					button.btn.btn-success.register(type="submit") Register