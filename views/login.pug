extends layout

block content
	#login
		.container
			.col-sm-offset-4.col-sm-4
				h3.col-sm-offset-4 Login
				hr
				form.form-horizontal.needs-validation(method="POST" action="/login")
					.form-group
						.col-sm-6.col-sm-offset-3
							input.form-control.username(name="username" ,type="text" ,placeholder="ID" required)
					.form-group
						.col-sm-6.col-sm-offset-3
							input.form-control.password(name="password" ,type="password",placeholder="Password" required)

					hr
					br

					input.btn.btn-success.col-sm-offset-4(type="submit" value="Login")

